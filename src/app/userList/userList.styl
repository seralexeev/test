user-list
  height: 100%
  width: 300px
  min-width 250px
  margin: 0 15px 0 15px;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12);
  background #fff
  position relative
  overflow-y: hidden

  & + left-menu
    margin: 0 15px 0 0;

.user-list
  //border 1px solid #ddd
  height: 100%
  overflow-y: auto;
  overflow-x: hidden;

  &__search
    padding 5px
    position relative

    input
      border-radius 25px

    .search__btn
      display: block;
      position: absolute;
      top: 5px;
      right: 10px;
      padding: 10px;

  &__item
    cursor pointer
    padding 5px
    position relative
    font-size 14px

    & + &
      border-top 1px solid #eee

    &:hover
      background #eee

    &.__current
      background #2196F3
      color: #fff

      .left-list__item__tx
        color: #fff


    $size = 14px
    $top = 9px
    &.current:after
      content ''
      position absolute
      right: -1px
      top: $top
      width: 0px;
      height: 0px;
      border-top: $size solid transparent;
      border-bottom: $size solid transparent;
      border-right: $size solid #fff;

    &.current:before
      content ''
      position absolute
      right: 0px
      top: $top
      width: 0px;
      height: 0px;
      border-top: $size solid transparent;
      border-bottom: $size solid transparent;
      border-right: $size solid #ddd;

    &__name
      //vertical-align top
      display inline-block
      //padding 10px 10px

    &__tx
      color #000
      text-overflow ellipsis
      overflow hidden
      white-space pre
      font-size 12px

    &__status
      position absolute
      left 8px
      top 5px
      color: #ddd

      .online &
        color: #00C853

    .round-photo
      width: 36px

    &.new-message
      animation blink 2s infinite;


.wait-handle
  padding: 10px
  font-size 14px
  margin-bottom 15px
  border-bottom 1px solid #eee
  position relative
  font-weight normal

