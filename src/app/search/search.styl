.search
  border 1px solid #ddd
  padding 10px 0
  position fixed
  top 50
  left 0
  right 0
  background #fff
  z-index 99999
  box-shadow: 0 9px 11px -5px rgba(0,0,0,.2),0 18px 28px 2px rgba(0,0,0,.14),0 7px 34px 6px rgba(0,0,0,.12);

  &__result
    padding 5px 10px
    cursor: pointer

    &:hover
      background #eee

.mess__info
  margin-right 15px;

.search__close
  font-size 18px
  position: absolute
  top: 10
  right: 10
