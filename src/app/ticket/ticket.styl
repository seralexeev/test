ticket
  display flex
  flex-direction row
  border-top 1px solid #ddd
  width: 100%

.chat
  width: 50%
  margin: 0 15px 0 0;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12);
  background #fff

.info
  width: 50%
  //border-left 1px solid #ddd
  margin-right 50px
  box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12);
  background #fff

  .main
    padding 10px

    &__info
      display flex
      flex-direction row

      td:nth-child(odd)
        text-align right

      & > div
        width: 50%

    .photo
      display inline-block
      width: 128px;
      height: 175px;
      background: url('http://cdn.grumpycats.com/wp-content/uploads/2016/02/12654647_974282002607537_7798179861389974677_n-758x758.jpg') 100% 100% no-repeat
      background-size: cover
      background-position center
      border-radius 3px
      border-top-right-radius: 0;
      border: 1px solid #ddd

.dubls
  display flex
  flex-direction row
  justify-items align-items
  //margin-bottom 10px

.dubl
  display block
  padding: 5px 5px 5px 15px;
  cursor: pointer
  border-bottom 1px solid #ddd
  flex 1

  & + &
    border-left 1px solid #ddd

  &:hover
    background #eee

.top__actions
  display flex
  flex-direction row
  justify-items align-items
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  z-index: 1;
  background: rgba(255, 255, 255, 0.95);
  border-bottom: 1px solid #ddd;

.top__action
  display block
  padding 5px
  cursor: pointer
  //border-bottom 1px solid #ddd
  border-top 1px solid #ddd
  flex 1
  text-align center

  & + &
    border-left 1px solid #ddd

  &:hover
    background #eee

.send-message
  display flex
  flex-direction row
  justify-items align-items
  border-top 1px solid #ddd
  padding 10px 15px
  position relative

  &__icons
    position absolute
    font-size: 17px;
    right: 130px;
    top: 15px;
    z-index: 5;

    a
      margin-right 8px

.chat
  display flex
  flex-direction column
  position relative

.chat-area
  height: 100px
  flex: 1
  overflow-y: auto;
  padding: 40px 15px 15px;
  background-color: #f0f0f0;
  background-image: url('/img/msg_bg_3.png');

$size = 10px

.chat-message
  max-width 80%
  //border 1px solid #ddd
  margin-bottom 20px

  .media-body
    width: initial
    //border: 1px solid #eee;
    border-radius: 3px;
    padding: 5px 10px;
    position relative
    overflow visible
    min-width 300px


.message-note
  margin: 10px auto
  padding: 10px
  border-radius: 10px
  font-size: 12px
  max-width: 100%
  //border: 2px solid #ddd
  //background: #d8f3fc
  //background-color: #bebebe;
  background: rgba(0,190,255,0.15);
  color: #000

  .media-body
    width: 1000000px
    //background: #eee;
    min-width: auto;
    text-align center;


  .media-left
    vertical-align middle

.message-right
  float: right

  .author
    float: right

  .media-body
    background: #E3F2FD

    &:after
      content ''
      position absolute
      right: -9px
      top: 8px
      width: 0;
      height: 0;
      border-top: $size solid transparent;
      border-bottom: $size solid transparent;
      border-left: $size solid #E3F2FD;

    //&:before
    //  content ''
    //  position absolute
    //  right: -10px
    //  top: 8px
    //  width: 0px;
    //  height: 0px;
    //  border-top: $size solid transparent;
    //  border-bottom: $size solid transparent;
    //  border-left: $size solid #E3F2FD;

.message-left
  .media-body
    background: #E0F2F1

  .date
    float: right

    &:after
      content ''
      position absolute
      left: -10px
      top: 8px
      width: 0;
      height: 0;
      border-top: $size solid transparent;
      border-bottom: $size solid transparent;
      border-right: $size solid #E0F2F1;


.attachment
  width: 100px
  height 100px
  display inline-block
  margin-right 10px
  margin-top 10px
  background: url("http://cdn.grumpycats.com/wp-content/uploads/2016/02/12654647_974282002607537_7798179861389974677_n-758x758.jpg") 100% 100% no-repeat;
  background-size: cover;
  border: 1px solid #ddd;

.select-chat
  font-size: 48px;
  color: #999;
  position absolute
  top: calc(50% - 100px)
  left: calc(50% - 100px)