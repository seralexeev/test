main-header
  display block
  position fixed
  top 0
  left 0
  right 0
  z-index 10
  border-bottom 1px solid #ddd

  .navbar
    background #fff

.main-header
  &__links
    list-style none
    margin 0
    padding 0

    li
      display inline-block
      vertical-align middle

    a
      display block
      //color: #fff
      text-decoration none
      padding 15px 20px

      &:hover
        background #eee

      &:hover
        background transparent

      i
        color: #ddd

      input
        border: 1px solid #ddd
        line-height: 1.5;
        //border-radius: 3px

  &__search
    .search__input
      //background #eee
      border-radius: 50px
      box-shadow none

      &:focus
        background #fff
        width 300px

    .search__btn
      display: block;
      position: absolute;
      top: 8px;
      right: 15px;
      padding: 10px;

a.main-header__profile
  padding 7px !important