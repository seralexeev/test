@keyframes blink {
  0% {
    background #FFE0B2
  }
  50% {
    background transparent
  }
  100% {
    background #FFE0B2
  }
}

.divider
  font-size 12px
  color: #555
  &:after
    border-bottom 1px solid #ddd
    padding-bottom 10px
    margin-bottom 10px

.wait
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: calc(100% - 39px);
  height: 40px;
  background #fff
  z-index 10
  transition .2s ease;

.__w-visible

  &.wait
    top: 0
    height auto

  .wait_btn
    //color: #fff
    background #eee !important

.wait_btn
  border: 0;
  width: 100%;
  padding: 10px;
  background: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  bottom 0
  left 0
  right 0

  &:active
    background #ddd;


.list__title
  color: #999
  text-align center
  font-size 16px
  margin 5px 0 0px

.serach_add
  padding 5px 0px 0

  .form-group
    margin-bottom 4px

  input
    border-radius 0

.form-group--two
  display flex
  justify-content: space-between
  position relative
  input
    display inline-block
    width calc(50% - 5px)
    padding-left 30px